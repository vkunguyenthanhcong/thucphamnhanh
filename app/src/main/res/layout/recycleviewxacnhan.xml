<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="horizontal"
        android:layout_width="400dp"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/imagesp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_launcher_background"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/tensp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@id/imagesp"
            android:layout_marginLeft="10dp"
            tools:ignore="MissingConstraints" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/giasp"
            android:text="Giá sản phẩm"
            android:textColor="@color/red"
            app:layout_constraintTop_toBottomOf="@id/tensp"
            app:layout_constraintStart_toEndOf="@id/imagesp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtsoluong"
            android:text="Số lượng : "
            app:layout_constraintTop_toBottomOf="@id/giasp"
            app:layout_constraintStart_toEndOf="@id/imagesp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            tools:ignore="MissingConstraints" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:id="@+id/soluong"
            app:layout_constraintStart_toEndOf="@+id/txtsoluong"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/giasp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tình trạng: "
            android:id="@+id/txttinhtrang"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/imagesp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/txtsoluong"
            tools:ignore="MissingConstraints" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tinhtrang"
            android:text="Đơn hàng"
            android:textColor="@color/red"
            app:layout_constraintTop_toBottomOf="@id/txtsoluong"
            app:layout_constraintStart_toEndOf="@id/txttinhtrang"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/xacnhan"
            android:text="Chi tiết"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="20dp"
            android:background="@drawable/botron_button"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/hinhtron_button"
            android:text="Liên hệ"
            android:id="@+id/lienhe"
            app:layout_constraintTop_toBottomOf="@id/xacnhan"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            tools:ignore="MissingConstraints" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>