<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="horizontal"
        android:layout_width="400dp"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/imagesp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_launcher_background"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/tensp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@id/imagesp"
            android:layout_marginLeft="10dp"
            tools:ignore="MissingConstraints" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/giasp"
            android:text="Giá sản phẩm"
            android:textColor="@color/red"
            app:layout_constraintTop_toBottomOf="@id/tensp"
            app:layout_constraintStart_toEndOf="@id/imagesp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            app:layout_constraintStart_toEndOf="@id/giasp"
            app:layout_constraintTop_toBottomOf="@id/tensp"
            android:layout_marginTop="10dp"
            android:text=" VNĐ"
            tools:ignore="MissingConstraints" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="-"
            android:id="@+id/giam"
            app:layout_constraintStart_toEndOf="@id/imagesp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/giasp"
            tools:ignore="MissingConstraints" />
        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="1"
            android:id="@+id/soluong"
            app:layout_constraintTop_toBottomOf="@id/giasp"
            app:layout_constraintStart_toEndOf="@id/giam"
            android:gravity="center"
            tools:ignore="MissingConstraints" />
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+"
            android:id="@+id/tang"
            app:layout_constraintStart_toEndOf="@id/soluong"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/giasp"
            tools:ignore="MissingConstraints" />
        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/buy"
            android:text="Mua"
            app:layout_constraintEnd_toEndOf="parent"
            android:drawableLeft="@drawable/ic_cart_white"
            android:background="@drawable/botron_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>